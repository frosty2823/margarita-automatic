{
  "manifest_version": 3,
  "name": "Air Delva",
  "version": "2.0",
  "description": "It fetches the content from currently opened conversation",

  "author": "Oliver",

  "action": {
    "default_icon": "image.png",
    "default_title": "Air Delva",
    "default_popup": "popup.html"
  },
  "permissions": [
    "scripting",
    "activeTab",
    "tabs",
    "clipboardRead",
    "clipboardWrite"
  ],
  "icons": {
    "16": "image.png",
    "32": "image.png",
    "48": "image.png",
    "128": "image.png"
  },
  "host_permissions": ["https://*/*"],
  "background": {
    "service_worker": "background.js"
  }
}
